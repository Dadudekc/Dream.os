"""
Base Prompt Template

This template provides the foundation for generating prompts with consistent
structure and formatting.
"""

{%- if system_message %}
System: {{ system_message }}
{% endif %}

{%- if context %}
Context: {{ context }}
{% endif %}

{%- if constraints %}
Constraints:
{% for constraint in constraints %}
- {{ constraint }}
{% endfor %}
{% endif %}

{%- if examples %}
Examples:
{% for example in examples %}
{{ example }}
{% endfor %}
{% endif %}

{%- if prompt %}
{{ prompt }}
{% endif %} 